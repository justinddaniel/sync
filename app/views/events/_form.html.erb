<div class="form">
<%= form_for @event do |f| %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :location, "Location" %><br>
    <%= f.text_field :location, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :date_from, "From:" %><br>
    <%= f.date_field :date_from, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :date_to, "From:" %><br>
    <%= f.date_field :date_to, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Please enter a description of your event. *Optional*" %><br>
    <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%
    <%= f.label :guest, "Select your guests" %><br>
    <%= f.check_box_tag :guests, Guests.all.sort{|a,b| a.name<=>b.name}, :id, :name, include_blank: 'Please select your guests' %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>

</div>
