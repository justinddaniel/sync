
<h1>Edit <%= @event.name %></h1>

<div class="form">

<%= form_for([@user, @event], html: { multipart: true }) do |f| %>
  <div class="form-group">
    <%= f.label :name, "Event Name" %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div><br>

  <div class="form-group">
    <%= f.label :location, "Location" %><br>
    <%= f.text_field :location, class: "form-control" %>
  </div><br>

  <div class="form-group">
    <%= f.label :date_from, "From:" %><br>
    <%= f.date_field :date_from, class: "form-control" %>
  </div><br>

  <div class="form-group">
    <%= f.label :date_to, "To: *Optional" %><br>
    <%= f.date_field :date_to, class: "form-control" %>
  </div><br>

  <div class="form-group">
    <%= f.label :description, "Please enter a description of your event. *Optional*" %><br>
    <%= f.text_field :description, class: "form-control" %>
  </div><br>


</div>
  <span>Invite Your Guests:</span><br>
    <%@event.guests.each do |guest|%>
    <% check_box_tag 'invited', 'yes', true %>

  <input checked="checked" type="checkbox" id="<%=guest.id%>" name="event[guest][]" value="<%=guest.id%>"> <%=guest.user.name%></input><br>

    <% end %><br>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>

  <% end %>


<%= link_to 'Cancel', user_path(@user) %>


</div>
